       scanf("%d", &K);
       //ler quantos homens tem entre 3 e 13
    (M = D - K);
    //calculo pra saber quantos homens tem entre 14 e 100
     printf("ainda dos %d homens, quantos tinham entre 14 e 17 anos?\n\n", M);
     //interação com o usuario para saber quantos homens tem entre 14 e 17 anos
       scanf("%d", &N);
       //ler quantos homens tem entre 14 e 17
    (O = M - N);
    //calculo para saber quantos homens tem entre 18 e 100
     printf("dessas %d, quantos tinham entre 18 e 64 anos?\n\n", O);
     //interação com o usuario para saber quantos homens tem entre 18 e 64 anos
       scanf("%d", &P);
       //ler quantos homens tem entre 18 e 64
    (Q = O - P);
    //calculo pra saber quantos homens tem entre 64 e 100   
    
system("pause");
//pausar o sistema
system("cls");  
//limpar o cmd

    printf("Segue a tabela do filme %s\n", nome);
    printf("___________________________________\n");
    printf("|%d MULHERES - entre 3 e 13 anos   \n", E);
    printf("|%d MULHERES - entre 14 e 17 anos  \n", G); 
