#include <time.h>//
int main (){
   //A função main pode retornar um inteiro para o sistema
   //operacional
    int A, B, C, D, E, F, G, H, I, i, J, K, L, M, N, O, P, Q; 
	// declarando as variaveis que serão usadas
    char nome[100];
    // declarando uma variavel char para texto
    printf ("Bem-vindos ao Cinema de Brasilia\n\n");  
