        do{
            printf("Digite a quantide de sessoes assistidas: \n\n");
            //interação com o usuario para saber as sessões assistidas
                scanf("%d", &A);
                // lendo a quantidade de sessões assistidas
            fflush(stdin);
            //descarrega os buffers de saída de um fluxo de dados
        if(A != 2)
        //if será executado se booleano for verdadeiro, como não lhe foi atribuído valor, é falso
            printf("Quantidade invalida!\n\n");
            //validação do valor
    }while(A != 2);

            printf("Qual filme vc assistiu?:\n\n ");
            //interação com usuario para saber o nome do filme
                fgets(nome, 100, stdin);
                //stdin dispositivo de entrada padrão
                // fgets Para se ler uma string num arquivo
            fflush(stdin);
            //descarrega os buffers de saída de um fluxo de dados
