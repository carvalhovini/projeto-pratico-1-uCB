            printf ("Digite a quantidade de pessoas que assistiram o filme\n\n");
            //interação com usuario para saber quantas pessoas assistiram o filme
            scanf ("%d", &B);
            //lendo a quantidade de pessoas no filme
            
    if (B<10){
    //if será executado se booleano for verdadeiro, como não lhe foi atribuído valor, é falso
            printf ("Minimo de 10 pessoas, tente novamete\n\n");
            //validação caso tenha menos que 10 pessoas
    }else{
            printf ("Proxima etapa\n\n");
            //validação caso tenha mais que 10 pessoas
    }
        }while(B<10);

            printf("dessas %d, quantas era mulheres?\n\n", B);
            //interação com usuario para saber quantas mulheres tinham
            scanf("%d", &C);
            //lendo a quantidade de mulheres

     (D = B - C);
     //calculo para saber a quantidade de homens 

        printf("segue os dados do filme %s \n", nome); 
        printf("|---------------------|\n");
        printf("|-H------total------M-|\n");
        printf("|%d-------%d--------%d|\n", D, B, C);
        printf("|---------------------|\n");
        //tabela com o total de homens e mulheres
        
system("pause");
//pausar o sistema 
system("cls");
//limpar o cmd

     printf("dessas %d mulheres quantas tinham entre 3 e 13 anos?\n\n", C);
     //interação com o usuario para saber quantas mulheres tem entre 3 e 13
       scanf("%d", &E);
       // ler quantas mulheres tem entre 3 e 100
    (F = C - E);
    //calculo pra saber quantos adolescentes tem
     printf("ainda das %d mulheres, quantas tem entre 14 e 17 anos?\n\n", F);
     //interação com o usuario para saber quantas mulheres tem entre 14 e 17
       scanf("%d", &G);
       //ler quantas mulheres tem entre 14 e 100 
    (H = F - G);
    // calculo para saber a quantidade de adultos que tem
     printf("dessas %d, quantas tinham entre 18 e 64 anos?\n\n", H);
     //interação com o usuario para saber quantas mulheres tem entre 18 e 64
       scanf("%d", &I);
       //ler quantas mulheres tem entre 18 e 100 
    (J = H - I);
    //calculo para saber a quantidade de idosos que tem
    
     printf("Okay ...");
     
system("pause");
//pausar o sistema 
system("cls");
//limpar o cmd
     
     printf("Desses %d homens, quantos tem entre 3 e 13 anos?\n\n", D);
